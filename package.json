{
  "name": "@m1rn/eslint-config",
  "description": "ESLint shareable configurations",
  "version": "1.0.0",
  "type": "module",
  "license": "MIT",
  "author": "m1rn",
  "homepage": "https://github.com/m1rn/eslint-config",
  "bugs": "https://github.com/m1rn/eslint-config/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/m1rn/eslint-config"
  },
  "keywords": [
    "eslint",
    "eslint-config",
    "javascript",
    "typescript",
    "html",
    "browser",
    "node",
    "react"
  ],
  "exports": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": ["dist"],
  "scripts": {
    "build": "pkgroll --minify --clean-dist",
    "prepare": "pnpm run build"
  },
  "peerDependencies": {
    "eslint": ">=9.6.0"
  },
  "peerDependenciesMeta": {
    "eslint": {
      "optional": true
    }
  },
  "dependencies": {
    "@eslint-react/eslint-plugin": "^1.14.2",
    "@eslint/markdown": "^6.1.0",
    "@html-eslint/eslint-plugin": "^0.27.0",
    "@html-eslint/parser": "^0.27.0",
    "@stylistic/eslint-plugin": "^2.8.0",
    "@typescript-eslint/eslint-plugin": "^8.7.0",
    "@typescript-eslint/parser": "^8.7.0",
    "eslint-merge-processors": "^0.1.0",
    "eslint-plugin-import-x": "^4.3.0",
    "eslint-plugin-jsonc": "^2.16.0",
    "eslint-plugin-perfectionist": "^3.7.0",
    "eslint-plugin-unicorn": "^55.0.0",
    "globals": "^15.9.0",
    "jsonc-eslint-parser": "^2.4.0"
  },
  "devDependencies": {
    "@eslint/config-inspector": "^0.5.4",
    "@m1rn/tsconfig": "^1.0.0",
    "@types/node": "^22.7.3",
    "eslint": "^9.11.1",
    "lint-staged": "^15.2.10",
    "pkgroll": "^2.5.0",
    "simple-git-hooks": "^2.11.1",
    "typescript": "^5.6.2"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*.{js,ts,md,json}": "eslint --cache --fix"
  }
}
